<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 900 600" width="900" height="600">
  <!-- Fondo degradado -->
  <defs>
    <linearGradient id="grad3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2563eb;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0a1628;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <rect width="900" height="600" fill="url(#grad3)"/>
  
  <!-- Marco del mockup -->
  <rect x="40" y="40" width="820" height="520" rx="20" fill="rgba(255,255,255,0.03)" stroke="rgba(0,212,255,0.2)" stroke-width="2"/>
  
  <!-- Área de contenido -->
  <rect x="60" y="60" width="780" height="480" rx="16" fill="rgba(10,22,40,0.5)"/>
  
  <!-- Grid de elementos -->
  <g opacity="0.08">
    <rect x="100" y="100" width="150" height="150" rx="8" fill="none" stroke="rgba(0,212,255,0.3)" stroke-width="2"/>
    <rect x="270" y="100" width="150" height="150" rx="8" fill="none" stroke="rgba(0,212,255,0.3)" stroke-width="2"/>
    <rect x="440" y="100" width="150" height="150" rx="8" fill="none" stroke="rgba(0,212,255,0.3)" stroke-width="2"/>
    <rect x="610" y="100" width="150" height="150" rx="8" fill="none" stroke="rgba(0,212,255,0.3)" stroke-width="2"/>
    
    <rect x="100" y="280" width="150" height="150" rx="8" fill="none" stroke="rgba(0,212,255,0.3)" stroke-width="2"/>
    <rect x="270" y="280" width="150" height="150" rx="8" fill="none" stroke="rgba(0,212,255,0.3)" stroke-width="2"/>
    <rect x="440" y="280" width="150" height="150" rx="8" fill="none" stroke="rgba(0,212,255,0.3)" stroke-width="2"/>
    <rect x="610" y="280" width="150" height="150" rx="8" fill="none" stroke="rgba(0,212,255,0.3)" stroke-width="2"/>
  </g>
  
  <!-- Texto principal -->
  <text x="450" y="480" font-family="Inter, -apple-system, BlinkMacSystemFont, Segoe UI, sans-serif" font-size="22" font-weight="bold" fill="rgba(255,255,255,0.35)" text-anchor="middle">
    Galería lista para tu mockup
  </text>
  
  <!-- Decoración -->
  <circle cx="180" cy="140" r="3" fill="rgba(0,212,255,0.6)" filter="url(#glow)"/>
  <circle cx="800" cy="220" r="2" fill="rgba(0,212,255,0.4)" filter="url(#glow)"/>
  <circle cx="120" cy="380" r="2.5" fill="rgba(0,212,255,0.5)" filter="url(#glow)"/>
  <circle cx="750" cy="350" r="2" fill="rgba(0,212,255,0.3)" filter="url(#glow)"/>
</svg>
