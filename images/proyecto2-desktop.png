<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 900 600" width="900" height="600">
  <!-- Fondo degradado -->
  <defs>
    <linearGradient id="grad2" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0e7490;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0f2847;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <rect width="900" height="600" fill="url(#grad2)"/>
  
  <!-- Marco del mockup -->
  <rect x="40" y="40" width="820" height="520" rx="20" fill="rgba(255,255,255,0.03)" stroke="rgba(0,212,255,0.2)" stroke-width="2"/>
  
  <!-- Ãrea de contenido -->
  <rect x="60" y="60" width="780" height="480" rx="16" fill="rgba(10,22,40,0.5)"/>
  
  <!-- Header bar -->
  <rect x="80" y="80" width="740" height="40" rx="8" fill="rgba(0,212,255,0.1)" stroke="rgba(0,212,255,0.2)" stroke-width="1"/>
  
  <!-- Content blocks -->
  <rect x="80" y="160" width="180" height="280" rx="8" fill="rgba(6,182,212,0.08)" stroke="rgba(6,182,212,0.15)" stroke-width="1"/>
  <rect x="280" y="160" width="540" height="40" rx="6" fill="rgba(0,212,255,0.06)"/>
  <rect x="280" y="220" width="540" height="30" rx="6" fill="rgba(0,212,255,0.05)"/>
  <rect x="280" y="270" width="540" height="30" rx="6" fill="rgba(0,212,255,0.04)"/>
  <rect x="280" y="320" width="400" height="30" rx="6" fill="rgba(0,212,255,0.04)"/>
  
  <!-- Texto placeholder -->
  <text x="450" y="455" font-family="Inter, -apple-system, BlinkMacSystemFont, Segoe UI, sans-serif" font-size="20" font-weight="bold" fill="rgba(255,255,255,0.4)" text-anchor="middle">
    Esperando tu mockup
  </text>
  
  <!-- Elementos decorativos -->
  <circle cx="250" cy="200" r="4" fill="rgba(0,212,255,0.5)" filter="url(#glow)"/>
  <circle cx="270" cy="250" r="3" fill="rgba(0,212,255,0.4)" filter="url(#glow)"/>
  <circle cx="240" cy="300" r="2" fill="rgba(0,212,255,0.3)" filter="url(#glow)"/>
</svg>
